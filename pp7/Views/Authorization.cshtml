@model string?
@{
    ViewData["Title"] = "Вход";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="vh-100">
    <div class="container-fluid py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://credithub.ru/default/img/images/landing-header-image.png"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Вход</p>
                <form method="post" asp-action="Authorization" asp-controller="Auth">
                    <div class="form-outline mb-4">
                        <input type="text" name="login" class="form-control form-control-lg" />
                        <label class="form-label" for="form1Example13">Логин</label>
                    </div>

                    <div class="form-outline mb-4">
                        <input type="password" name="password" class="form-control form-control-lg" />
                        <label class="form-label" for="form1Example23">Пароль</label>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Войти</button>
                </form>
            </div>
        </div>
    </div>
</section>
@if(Model is not null){
<p>@Model</p>
}